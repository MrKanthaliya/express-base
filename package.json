{
    "name": "express-base",
    "version": "0.0.1",
    "description": "express boilerplate for small and medium application with mongodb setup.",
    "main": "index.js",
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.1.0",
        "babel-preset-es2015": "^6.24.1",
        "eslint": "^7.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "nodemon": "^2.0.6",
        "pre-commit": "^1.2.2",
        "nyc": "^15.1.0"
    },
    "dependencies": {
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@sendgrid/mail": "^7.4.0",
        "body-parser": "^1.19.0",
        "boom": "^7.3.0",
        "brcypt": "^1.0.1",
        "chai": "^4.2.0",
        "compression": "^1.7.4",
        "config": "^3.3.1",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "helmet": "^4.1.1",
        "joi": "^17.2.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.20",
        "method-override": "^3.0.0",
        "mocha": "^8.1.3",
        "moment": "^2.29.1",
        "mongoose": "5.10.3",
        "npm-run-all": "^4.1.5",
        "redis": "^3.0.2",
        "request": "^2.88.0",
        "rewire": "^5.0.0",
        "rimraf": "^3.0.2",
        "string-format": "^2.0.0",
        "supertest": "^4.0.2",
        "swagger-express": "^1.0.5",
        "winston": "^3.3.3",
        "xss": "^1.0.8"
    },
    "scripts": {
        "start": "NODE_ENV=development node -r esm src/index.js",
        "start:uat": "NODE_ENV=uat node -r esm src/index.js",
        "start:production": "NODE_ENV=production node -r esm src/index.js",
        "debug": "node --nolazy --inspect-brk=3001 -r esm src/index.js",
        "test": "mocha ./test/unit/*.js",
        "test-debug": "mocha --nolazy --inspect-brk=3001  ./test/unit/*.js",
        "acceptances": "mocha --timeout 15000 ./test/acceptances/*.js --require esm --exit",
        "acceptances-debug": "mocha --timeout 15000 --nolazy --inspect-brk=3001 ./test/acceptances/*.js --require esm --exit",
        "coverage": "nyc --require esm mocha ./test/**/*.js",
        "watch": "nodemon -r esm src/index.js --config nodemon.json",
        "lint": "eslint --ext .js src/ && eslint --ext .js test/",
        "lint:fix": "eslint --fix src/ && eslint --fix test/",
        "check": "yarn lint:fix"
    },
    "pre-commit": [
        "check"
    ],
    "keywords": [
        "project",
        "node",
        "express",
        "structure",
        "TDD",
        "Testing"
    ],
    "author": "Pritesh Kanthaliya",
    "license": "MIT"
}
