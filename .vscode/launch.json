    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "name": "Express base local server debug.",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["debug"],
            "port": 3001,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Test Express base  local server debug.",
            "cwd": "${workspaceRoot}",
            "port": 3001,
            "request": "launch",
            "runtimeArgs": ["test-debug"],
            "runtimeExecutable": "yarn",
            "runtimeVersion": "14.15.0",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": false,
            "outputCapture": "std",
            "type": "node"
        }, {
            "name": "Test acceptance Express base local server debug.",
            "cwd": "${workspaceRoot}",
            "port": 3001,
            "request": "launch",
            "runtimeArgs": ["acceptances-debug"],
            "runtimeExecutable": "yarn",
            "runtimeVersion": "14.15.0",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": false,
            "outputCapture": "std",
            "type": "node"
        },
    ]
}
